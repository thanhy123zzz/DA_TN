@{
    PhanQuyenChucNang phanQuyenTraCuuBH = ViewBag.phanQuyen;
}
<div class="tables-wrapper">
        <div class="row">
                <div class="col-lg-12">
                    <div id="content" class="card-style mb-30 p-4" >
                        <div class = "tab-content pt-2">
                            <div class="tab-pane fade active show" id="bordered-justified-profile" role="tabpanel" aria-labelledby="profile-tab">
                                <div class="form-group p-2 mb-2" id="groupTTSearchLichSu" style="border-radius: 5px; border: 1px solid black;">
                                 <div class="row mb-2">
                                     <div class="col-sm-8 col-lg-8 select-style-4">
                                            <label for="KhachHang">Khách hàng</label>
                                            <select id="KhachHang" name="KhachHang" class="form-select w-100 my-selectize-2">
                                            </select>
                                        </div>
                                    <div class="col-sm-2 col-lg-2 input-style-4">
                                            <label for="fromDayCT" >Từ ngày</label>
                                            <input class="input-date" placeholder="dd-MM-yyyy" id="fromDayCT" name="fromDayCT" value="@DateTime.Now.ToString("dd-MM-yyyy")" type="text">
                                        </div>
                                        <div class="col-sm-2 col-lg-2 input-style-4">
                                            <label for="toDayCT" >Đến ngày</label>
                                            <input class="input-date" placeholder="dd-MM-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")" type="text" id="toDayCT" name="toDayCT">
                                        </div>
                                </div>
                                 <div class="row mb-2 justify-content-between">
                                  <div class="col-sm-7 col-lg-7 select-style-4">
                                       <label for="hangHoaCT">Hàng hoá</label>
                                           <select id="hangHoaCT" name="hangHoaCT" class="form-select w-100 my-selectize-2">
                                        </select>
                                   </div>
                                   <div class="col-sm-4 col-lg-4 input-style-4">
                                            <label for="SDT">Số điện thoại</label>
                                            <input placeholder="Số điện thoại" type="text" id="SDT" name="SDT">
                                        </div>
                                @if (phanQuyenTraCuuBH.TimKiem.Value)
                                {
                                          <div class="col-12 col-sm-1 col-lg-1 d-flex justify-content-end mt-1">
                                             <button class="btn btn-light w-100" type="button" onclick="loadTableBaoCaoChiTiet()">
                                                 <i class="lni lni-keyword-research d-flex justify-content-center"></i>
                                             </button>
                                          </div>
                                }
                                </div>
                            </div>
                                <div id="tableBaoCaoChiTiet" class="table-responsive" style="max-height:500px;overflow-x: auto;white-space:nowrap;"> 
                                       <table class="table table-bordered table-striped top-selling-table table-hover display nowrap" style="width:100%;max-height:500px">
                                                <thead>
                                                    <tr>
                                                        <th>STT</th>
                                                        <th>Ngày bán</th>
                                                        <th>Khách hàng</th>
                                                        <th>Mã hàng</th>
                                                        <th>Tên hàng</th>
                                                        <th>Số lượng bán</th>
                                                        <th>ĐVT</th>
                                                        <th>Giá bán</th>
                                                        <th>Kiểu bảo hành</th>
                                                        <th class="last-th-column">Trạng thái</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="tBody">

                                                </tbody>
                                            </table>
                                            <div id="loaderCT">
                                           <div class="d-flex justify-content-center">
                                                <div class="spinner-grow text-primary" role="status">
                                                    <span class="visually-hidden">Loading...</span>
                                           </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
<script>
$(document).ready(function () {
    $("#loaderCT").hide();
    $('.input-date').datetimepicker({
        locale: 'vi',
        useStrict: true,
        format: "DD-MM-yyyy",
        icons: {
            date: "lni lni-calendar",
            up: "lni lni-angle-double-up",
            down: "lni lni-angle-double-down",
            previous: 'lni lni-angle-double-left',
            next: 'lni lni-angle-double-right',
            time: "lni lni-alarm-clock"
        }
    });
    $('#KhachHang').selectize({
        maxOptions: 30,
        onFocus: function ($dropdown) {
            $('.my-selectize-2').not(this.$input).each(function () {
                if (this.selectize) {
                    this.selectize.close();
                    this.selectize.blur();
                }
            });
        },
        valueField: "id",
        labelField: "tenKh",
        searchField: ["tenKh", "maKh"],
        placeholder: '-- Khách hàng --',
        allowEmptyOption: false,
        preload: true,
        load: function (query, callback) {
            if (query !== "") {
                $.ajax({
                    data: "key=" + query,
                    type: 'POST',
                    url: '/QuanLy/XuatKho/api/khs'
                }).done(function (response) {
                    callback(response);
                });
            }
        },
        loadThrottle: 400,
        render: {
            item: function (item, escape) {
                return '<div>' + escape(item.tenKh + ' (' + item.loai + ')') + '</div>';
            }
        },
    });

    $('#hangHoaTH').selectize({
        maxOptions: 10,
        onChange: function (value) {
            if (value !== "") {
                $.ajax({
                    url: '/QuanLy/NhapKho/api/solo',
                    method: 'post',
                    data: "idHh=" + value,
                    success: function (response) {
                        var soLoSelectize = $('#soLo')[0].selectize;
                        soLoSelectize.clearOptions();
                        soLoSelectize.load(function (callback) {
                            callback(response.soLos);
                        });
                        $('#dvt').val(response.dvt);
                        $('#imageHH').prop('src', response.avatar);
                        $('#imageHH').attr('alt', response.alt);
                    }
                });
            }
        },
        onFocus: function ($dropdown) {
            $('.my-selectize-2').not(this.$input).each(function () {
                if (this.selectize) {
                    this.selectize.close();
                    this.selectize.blur();
                }
            });
        },
        valueField: "id",
        labelField: "tenHh",
        searchField: ["tenHh", "maHh"],
        placeholder: '-- Hàng hoá --',
        allowEmptyOption: false,
        preload: true,
        load: function (query, callback) {
            if (query !== "") {
                $.ajax({
                    data: "key=" + query,
                    type: 'POST',
                    url: '/QuanLy/NhapKho/api/hhs'
                }).done(function (response) {
                    callback(response);
                });
            }
        },
        loadThrottle: 400,
    });
    $('#hangHoaCT').selectize({
        maxOptions: 10,
        onChange: function (value) {
            if (value !== "") {
                $.ajax({
                    url: '/QuanLy/NhapKho/api/solo',
                    method: 'post',
                    data: "idHh=" + value,
                    success: function (response) {
                        var soLoSelectize = $('#soLo')[0].selectize;
                        soLoSelectize.clearOptions();
                        soLoSelectize.load(function (callback) {
                            callback(response.soLos);
                        });
                        $('#dvt').val(response.dvt);
                        $('#imageHH').prop('src', response.avatar);
                        $('#imageHH').attr('alt', response.alt);
                    }
                });
            }
        },
        onFocus: function ($dropdown) {
            $('.my-selectize-2').not(this.$input).each(function () {
                if (this.selectize) {
                    this.selectize.close();
                    this.selectize.blur();
                }
            });
        },
        valueField: "id",
        labelField: "tenHh",
        searchField: ["tenHh", "maHh"],
        placeholder: '-- Hàng hoá --',
        allowEmptyOption: false,
        preload: true,
        load: function (query, callback) {
            if (query !== "") {
                $.ajax({
                    data: "key=" + query,
                    type: 'POST',
                    url: '/QuanLy/NhapKho/api/hhs'
                }).done(function (response) {
                    callback(response);
                });
            }
        },
        loadThrottle: 400,
    });
});

function loadTableBaoCaoChiTiet(){
    $("#loaderCT").show();
    $.ajax({
        type: "post",
        url: "/QuanLy/TraCuuBH/search-bh",
        data: "idHh=" + $('#hangHoaCT').val() + "&idKh=" + $('#KhachHang').val()
        + "&fromDay=" + $('#fromDayCT').val() + "&toDay=" + $('#toDayCT').val() + "&Sdt=" + $('#SDT').val(),
        success: function (result) {
            $("#loaderCT").hide();
            $('#tBody').replaceWith(result);
        },
        error: function (loi) {
            console.log(loi);
        }
    });
}
</script>