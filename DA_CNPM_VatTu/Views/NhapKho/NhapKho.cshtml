    var date1Parts = HanDung.split('-');
    var date1 = new Date(parseInt(date1Parts[2]), parseInt(date1Parts[1]) - 1, parseInt(date1Parts[0]));

    var date2Parts = NgaySX.split('-');
    var date2 = new Date(parseInt(date2Parts[2]), parseInt(date2Parts[1]) - 1, parseInt(date2Parts[0]));

