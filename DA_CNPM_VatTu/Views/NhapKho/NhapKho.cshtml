function addChiTietPhieu() {
    var invalid = false;
    var idhh = getValue($('#hangHoa').val());
    var Dvt = $('#dvt').val();
    var soLo = $('#soLo').val();
    var ThueXuat = getValue($('#ThueXuat').val());
